{
  "paths": {
    "/process-definitions/search": {
      "post": {
        "summary": "Search for process definitions",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessDefinitionSearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessDefinitionSearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              },
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "404": {
            "description": "Not Found / Data invalid",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              },
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "500": {
            "description": "API application error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProcessDefinitionSearchRequest": {
        "type": "object",
        "properties": {
          "filter": {
            "$ref": "#/components/schemas/ProcessDefinitionFilter"
          },
          "size": {
            "type": "integer",
            "format": "int32"
          },
          "searchAfter": {
            "type": "array",
            "items": {}
          },
          "sort": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SortInstruction"
            }
          }
        }
      },
      "ProcessDefinitionFilter": {
        "type": "object",
        "properties": {
          "key": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          },
          "versionTag": {
            "type": "string"
          },
          "bpmnProcessId": {
            "type": "string"
          },
          "tenantId": {
            "type": "string"
          }
        }
      },
      "SortInstruction": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "order": {
            "$ref": "#/components/schemas/SortOrder"
          }
        }
      },
      "SortOrder": {
        "type": "string",
        "enum": ["ASC", "DESC"]
      },
      "ProcessDefinitionItem": {
        "type": "object",
        "properties": {
          "key": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          },
          "versionTag": {
            "type": "string"
          },
          "bpmnProcessId": {
            "type": "string"
          },
          "tenantId": {
            "type": "string"
          }
        }
      },
      "ProcessDefinitionSearchResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProcessDefinitionItem"
            }
          },
          "sortValues": {
            "type": "array",
            "items": {}
          },
          "total": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Problem": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      }
    }
  }
}