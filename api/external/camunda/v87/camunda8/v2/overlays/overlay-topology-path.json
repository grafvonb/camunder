{
  "paths": {
    "/topology": {
      "get": {
        "summary": "Get cluster topology",
        "responses": {
          "200": {
            "description": "Cluster topology",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Topology"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Topology": {
        "type": "object",
        "properties": {
          "brokers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BrokerInfo"
            }
          },
          "clusterSize": {
            "type": "integer"
          },
          "partitionsCount": {
            "type": "integer"
          },
          "replicationFactor": {
            "type": "integer"
          }
        }
      },
      "BrokerInfo": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string"
          },
          "nodeId": {
            "type": "integer"
          },
          "partitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PartitionInfo"
            }
          }
        }
      },
      "PartitionInfo": {
        "type": "object",
        "properties": {
          "partitionId": {
            "type": "integer"
          },
          "role": {
            "type": "string",
            "enum": ["LEADER", "FOLLOWER", "INACTIVE"]
          }
        }
      }
    }
  }
}
